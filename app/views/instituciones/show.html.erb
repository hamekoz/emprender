<h2 class= "breadcrumb">Institucion</h2>
<article>
<div class="row">
  <div class="span-one-third">
    <h3>Informacion General</h3>
    <p>
      <strong>Nombre</strong><br>
      <%= @institucion.nombre %>
    </p>
    <p>
      <strong>Descripcion</strong><br>
      <%= @institucion.descripcion %>
    </p>
    <p>
      <strong>Fecha de creacion</strong><br>
      <%= @institucion.created_at %>
    </p>
  </div>
  <div class="span-one-third">
    <h3>Telefonos</h3>
    <%= render "telefonos/show", :telefono => @institucion.telefono %>
  </div>
  <div class="span-one-third">
    <h3>Domicilio</h3>
      <%= render "domicilios/show", :domicilio => @institucion.domicilio %>
  </div>
</div>
</article>

<div class="actions">
  <%= boton_volver instituciones_path %>

  <span class="pull-right">
    <%= social_share_button_tag(@institucion.nombre) %>
  </span>

</div>
