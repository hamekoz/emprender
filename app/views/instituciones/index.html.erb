<h1>Listando instituciones</h1>

<table>
  <tr>
    <th>Nombre</th>
    <th>Descripcion</th>
    <th colspan="3" rowspan="1">
      <%= link_to 'Nueva Institucion', new_institucion_path %>
    </th>
  </tr>

<% @instituciones.each do |institucion| %>
  <tr>
    <td><%= institucion.nombre %></td>
    <td><%= institucion.descripcion %></td>
    <td><%= link_to 'Mostrar', institucion, :class => 'mostrar boton mediano rojo'%></td>
    <td><%= link_to 'Editar', edit_institucion_path(institucion) %></td>
    <td><%= link_to 'Eliminar', institucion, :confirm => 'Â¿Esta seguro?', :method => :delete %></td>
  </tr>
<% end %>
</table>

