<h2>Instituciones</h2>
<table id="3columnas" class="zebra-striped">
  <thead>
    <tr>
      <th class="blue">Nombre</th>
      <th class="blue">Descripcion</th>
      <th><%= boton_agregar new_institucion_path %></th>
    </tr>
  </thead>

  <tbody>
  <% @instituciones.each do |institucion| %>
    <tr>
      <td><%= institucion.nombre %></td>
      <td><%= institucion.descripcion %></td>
      <td class="acciones">
        <%= boton_mostrar institucion %>
        <%= boton_editar edit_institucion_path(institucion) %>
        <%= boton_eliminar institucion %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
