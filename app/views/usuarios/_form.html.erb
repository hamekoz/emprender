<%= form_for(@usuario) do |f| %>
  <% if @usuario.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@usuario.errors.count, "error") %> <%= t('errores.guardar.m')%> usuario:</h2>

      <ul>
      <% @usuario.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="clearfix">
    <%= f.label :usuario %>
    <div class="input">
      <%= f.text_field :usuario %>
    </div>
  </div>
  <div class="clearfix">
    <%= f.label :password %>
    <div class="input">
      <%= f.password_field :password %>
    </div>
  </div>
  <div class="clearfix">
    <%= f.label :mail %>
    <div class="input">
      <%= f.email_field :mail %>
    </div>
  </div>
  <div class="clearfix">
    <%= f.label :rol %>
    <div class="input">
      <%= collection_select(:usuario, :rol_id, Rol.all, :id, :nombre) %>
    </div>
  </div>
  <%= f.fields_for :persona do |persona| %>
    <%= render "personas/form", :f => persona %>
  <% end %>
  <div class="actions">
    <%= f.submit :class => 'btn primary' %>
    <%= boton_cancelar :back %>
  </div>
<% end %>
