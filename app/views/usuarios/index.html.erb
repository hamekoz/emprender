<h1>Listado de usuarios</h1>

<table>
  <tr>
    <th>Usuario</th>
    <th>Correo electronico</th>
    <th>Rol</th>
    <th colspan="3" rowspan="1">
      <%= boton_agregar new_usuario_path %>
    </th>
  </tr>

<% @usuarios.each do |usuario| %>
  <tr>
    <td><%= usuario.nombre %></td>
    <td><%= usuario.email %></td>
    <td><%= usuario.rol.nombre %></td>
    <td><%= boton_mostrar usuario %></td>
    <td><%= boton_editar edit_usuario_path(usuario) %></td>
    <td><%= boton_eliminar usuario %></td>
  </tr>
<% end %>
</table>
