<div id="contenedor-grafico"></div>

<table class="table table-condensed">
  <thead>
    <tr class="well">
      <th>Rubro</th>
      <th>Cantidad</th>
    </tr>
  </thead>
  <tbody>
<% Rubros.all.each do |rubro| %>
    <tr class="grafico">
      <th scope="row"><%= rubro.nombre %></th>
      <td><%= rubro.productos.count %></td>
      </tr>
<% end %>
  </tbody>
</table>
