<%= simple_form_for @categoria do |f| %>

  <%= f.error_notification %>

  <fieldset>
    <legend>Categoria</legend>
    <%= f.input :nombre %>
    <%= f.input :descripcion %>
  </fieldset>

  <div class="actions">
    <%= f.button :submit, :class => 'btn primary' %>
    <%= boton_cancelar categorias_path %>
  </div>

<% end %>
