<h2>Categorias</h2>
<table class="zebra-striped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th><%= boton_agregar new_categoria_path %></th>
    </tr>
  </thead>

  <tbody>
  <% @categorias.each do |categoria| %>
    <tr>
      <td><%= categoria.nombre %></td>
      <td><%= categoria.descripcion %></td>
          <td class="acciones">
        <%= boton_mostrar categoria %>
        <%= boton_editar edit_categoria_path(categoria) %>
        <%= boton_eliminar categoria %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
