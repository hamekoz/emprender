<h1>Listado de categorias</h1>

<table>
  <tr>
    <th>Nombre</th>
    <th>Descripcion</th>
    <th colspan="3" rowspan="1">
      <%= boton_agregar new_categoria_path %>
    </th>
  </tr>

<% @categorias.each do |categoria| %>
  <tr>
    <td><%= categoria.nombre %></td>
    <td><%= categoria.descripcion %></td>
    <td class="accion"><%= boton_mostrar categoria %></td>
    <td class="accion"><%= boton_editar edit_categoria_path(categoria) %></td>
    <td class="accion"><%= boton_eliminar categoria %></td>
  </tr>
<% end %>
</table>

<br />
