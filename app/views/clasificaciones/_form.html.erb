<%= simple_form_for @clasificacion do |f| %>

  <%= f.error_notification %>

  <fieldset>
    <%= f.input :codigo %>
    <%= f.input :nombre %>
    <%= f.input :descripcion %>
  </fieldset>

  <div class="actions">
    <%= f.button :submit, :class => 'btn primary' %>
    <%= boton_cancelar clasificaciones_path %>
  </div>

<% end %>
