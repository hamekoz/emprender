<div class="tabbable tabs-left">
  <ul class="nav nav-tabs">
    <li class="active"><a data-toggle="tab" href="#Emprendedor">Emprendedor</a></li>
    <li><a data-toggle="tab" href="#Usuario">Usuario</a></li>
    <li><a data-toggle="tab" href="#Emprendimiento">Emprendimiento</a></li>
    <li><a data-toggle="tab" href="#Contacto">Contacto</a></li>
    <li><a data-toggle="tab" href="#Mercado">Mercado</a></li>
    <li><a data-toggle="tab" href="#AyudaSocial">Ayuda Social</a></li>
    <li><a data-toggle="tab" href="#Recursos">Recursos</a></li>
    <li><a data-toggle="tab" href="#Necesidades">Necesidades</a></li>
    <li><a data-toggle="tab" href="#Observaciones">Observaciones</a></li>
  </ul>

<%= simple_form_for(@emprendimiento) do |f| %>
  <%= f.error_notification %>

  <div class="tab-content">
    <div id="Emprendedor" class="tab-pane active">
      <fieldset>
        <%= f.input :emprendedor %>
      </fieldset>
    </div>
    <div id="Usuario" class="tab-pane">
      <fieldset>
      
      </fieldset>
    </div>
    <div id="Emprendimiento" class="tab-pane">
      <fieldset>
        <%= f.input :nombre %>
        <%= f.input :marca_registrada %>
        <%= f.input :marca %>
        <%= f.input :rubro %>
        <%= f.input :clasificacion %>
        <%= f.input :tipo %>
        <%= f.input :descripcion %>
        <%= f.input :cantidad_de_integrantes, :collection => 1..20 , :prompt => "Cantidad de integrantes"%>
        <%= f.input :roles %>
        <%= f.input :estado %>
        <%= f.input :fecha_de_inicio_de_actividad %>

      </fieldset>
    </div>
    <div id="Contacto" class="tab-pane">
      <fieldset>
        <%= f.input :web,
          :placeholder => 'www.emprendimiento.com.ar'
        %>
        <%= f.input :mail,
          :placeholder => 'info@emprendimiento.com.ar'
        %>
        <%= f.input :contacto %>
        <%= f.input :domicilio %>
        <%= f.input :barrio %>
        <%= f.input :telefono %>
        <%= f.input :celular %>
        <%= f.input :telefono_mensajes %>
        <%= f.input :comentarios,
          :placeholder => 'Llamar entre las 8 y 17 hs, telefono de mensajes solo por urgencias'
        %>
      </fieldset>
    </div>
    <div id="Mercado" class="tab-pane">
      <fieldset>
        <%= f.input :monotributo %>
        <%= f.input :monotributo_social %>
        <%= f.input :monotributo_inscripcion %>
        <%= f.input :monotributo_situacion, :collection => @emprendimiento.monotributo_situacion_enum , :prompt => "Situacion"%>
        <%= f.input :ingresos_brutos %>
        <%= f.input :inscripcion_a_ingresos_brutos %>
        <%= f.input :produccion_mensual %>
        <%= f.input :produccion_anual %>
        <%= f.input :produccion_maxima %>
      </fieldset>
    </div>
    <div id="AyudaSocial" class="tab-pane">
      <fieldset>
        <%= f.input :ayuda_social_recibida %>
        <%= f.input :programas_sociales_recibidos %>
        <%= f.input :programas_sociales_ayuda_recibida_tipo %>
        <%= f.input :sociedad_civil_vinculado %>
        <%= f.input :sociedad_civil_tipo_participacion %>
        <%= f.input :sociedad_civil_ayuda_recibida %>
        <%= f.input :sociedad_civil_justificacion_noayuda %>
        <%= f.input :capacitaciones_descripcion %>
        <%= f.input :maquinarias_herramientas_descripcion %>
      </fieldset>
    </div>
    <div id="Recursos" class="tab-pane">
      <fieldset>
        <%= f.input :espacio_propio %>
        <%= f.input :espacio_tipo %>
        <%= f.input :espacio_solucion %>
        <%= f.input :espacio_suficiente %>
        <%= f.input :espacio_acondicionamiento %>
        <%= f.input :espacio_invasivo %>
        <%= f.input :espacio_acondicinamiento_necesarios %>
      </fieldset>
    </div>
    <div id="Necesidades" class="tab-pane">
      <fieldset>
        <%= f.input :herramientas_necesarias_descripcion, :label => 'Herramientas' %>
        <%= f.input :maquinarias_necesarias_descripcion, :label => 'Maquinaria' %>
        <%= f.input :movilidad_necesaria_descripcion, :label => 'Movilidad' %>
        <%= f.input :insumos_necesarios_descripcon, :label => 'Insumos' %>
        <%= f.input :instalaciones_necesarias_descripcion, :label => 'Instalaciones' %>
        <%= f.input :capacitacion_necesaria_descripcion, :label => 'Capacitacion' %>
        <%= f.input :otros, :label => 'Otras necesidades' %>
      </fieldset>
    </div>
    <div id="Observaciones" class="tab-pane">
      <fieldset>
      </fieldset>
      <%= f.button :submit %>
    </div>
  </div>
<% end %>
</div>
