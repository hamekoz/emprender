<h2 class= "well">Cartelera de Noticias</h2>
<div class="row cartelera">
  <div class="well columns span2">
    <ul class="nav nav-list">
      <li class="nav-header">Enero 2012</li>
      <li class="active"><a href="#">Ultima Noticia</a></li>
      <li><a href="#">Noticia 5</a></li>
      <li><a href="#">Noticia 4</a></li>
      <li class="nav-header">Diciembre 2011</li>
      <li><a href="#">Noticia 3</a></li>
      <li><a href="#">Noticia 2</a></li>
      <li><a href="#">Noticia 1</a></li>
    </ul>
  </div>
  <div class="columns span9 well">

  <% @noticias.each do |noticia| %>
      <article class="">
        <header>
        <h1>
          <%= noticia.titulo %>
          <small> por <strong><%= noticia.autor.nombre_completo %></strong></small>
        </h1>
        </header>
        <%= noticia.texto.html_safe %>
        <footer>
          <p>
            <strong>Fecha publicacion: </strong>
            <%= noticia.fecha %>
          </p>
        </footer>
      </article>
  <% end %>
  </div>
  <div class="columns span9">
  <%= paginate @noticias %>
  </div>
</div>
