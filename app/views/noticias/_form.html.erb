<%= form_for(@noticia) do |f| %>
  <% if @noticia.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@noticia.errors.count, "error") %> <%= t('errores.guardar.f') %> noticia:</h2>

      <ul>
      <% @noticia.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<fieldset>
  <div class="clearfix">
    <%= f.label :titulo %>
    <div class="input">
      <%= f.text_field :titulo %>
    </div>
  </div>
  <div class="clearfix">
    <%= f.label :texto %>
    <div class="input">
      <%= f.text_area :texto %>
    </div>
  </div>
  <div class="clearfix">
    <%= f.label :autor %>
    <div class="input">
      <%= f.text_field :autor %>
    </div>
  </div>
  <div class="clearfix">
    <%= f.label :fecha %>
    <div class="input">
      <%= f.datetime_select :fecha %>
    </div>
  </div>
  <div class="clearfix">
    <%= f.label :publicada %>
    <div class="input">
      <%= f.check_box :publicada %>
    </div>
  </div>
</fieldset>
  <div class="actions">
    <%= f.submit :class => 'btn primary' %>
    <%= boton_cancelar :back %>
  </div>
<% end %>
