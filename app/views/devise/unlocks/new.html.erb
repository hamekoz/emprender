<%
  add_crumb "Inicio", root_path
  add_crumb "Desbloquear mi usuario"
%>

<h1 class="page-header">Â¿Su usuario esta bloqueado?</h1>
<div class="row">
  <div class="span8 offset2">

  <p class="alert alert-info">Si se ha bloqueado su usuario por reinterados intentos de ingreso fallido, podemos eviarle a su correo las instrucciones para poder desbloquearlo</p>
  <%= simple_form_for(resource,
                      :as => resource_name,
                      :url => unlock_path(resource_name),
                      :html => { :method => :post,:class => 'form-horizontal' }) do |f| %>
    <%= f.error_notification %>

    <div class="inputs well">
      <%= f.input :email, :required => true %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Enviar instrucciones de desbloqueo", :class => 'btn btn-primary' %>
    </div>
  <% end %>

  <%= render :partial => "devise/shared/links" %>
  </div>
</div>
