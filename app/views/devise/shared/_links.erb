<ul class="nav nav-pills">
<%- if controller_name != 'sessions' %>
  <li>
  <%= link_to(new_session_path(resource_name)) do %>
    <!--<i class="icon-ok icon-white"></i>-->
    <span class="badge badge-success">Ya tengo usuario</span>
  <% end %>
  </li>
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <li>
  <%= link_to(new_registration_path(resource_name)) do %>
    <span class="badge badge-important">No tengo usuario</span>
  <% end %>
  </li>
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
  <li>
  <%= link_to(new_password_path(resource_name)) do %>
    <!--<i class="icon-ok icon-white"></i>-->
    <span class="badge badge-warning">Olvide mi contrase√±a</span>
  <% end %>
  </li>
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <li>
  <%= link_to(new_confirmation_path(resource_name)) do %>
    <!--<i class="icon-ok icon-white"></i>-->
    <span class="badge badge-info">Confirmar mi usuario</span>
  <% end %>
  </li>
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <li>
  <%= link_to(new_unlock_path(resource_name)) do %>
    <!--<i class="icon-ok icon-white"></i>-->
    <span class="badge badge-inverse">Desbloquear mi usuario</span>
  <% end %>

  </li>
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <li>
    <%= link_to "Ingresar con #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider) %><br />
    </li>
  <% end -%>
<% end -%>
</ul>
