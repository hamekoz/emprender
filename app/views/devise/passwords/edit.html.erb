<div class="row">
<div class="span10 offset3">
<h2 class="breadcrumb">Cambiar su password</h2>

<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, :as => :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="inputs">
    <%= f.input :password, :label => "Nueva password", :required => true %>
    <%= f.input :password_confirmation, :label => "Confirme su nueva password", :required => true %>
  </div>

  <div class="actions">
    <%= f.button :submit, "Cambiar mi password", :class => 'btn primary' %>
  </div>
<% end %>

<%= render :partial => "devise/shared/links" %>
</div>
</div>
