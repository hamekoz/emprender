<%
  add_crumb "Inicio", root_path
  add_crumb "Registrarme"
%>

<h1 class="page-header">Registrarme en el sistema</h1>
<div class="row">
  <div class="span8 offset2">

  <%= simple_form_for(resource,
                      :as => resource_name, 
                      :url => registration_path(resource_name),
                      :html => { :class => 'form-horizontal' }) do |f| %>
    <%= f.error_notification %>
    <div class="inputs well">
      <%= f.input :nombre,
                  :placeholder => 'sus nombres',
                  :required => true,
                  :autofocus => true %>
      <%= f.input :apellido,
                  :placeholder => 'sus apellidos',
                  :required => true %>
      <%= f.input :sexo,
                  :required => true,
                  :collection => resource.sexo_enum,
                  :as => :radio_buttons %>
      <%= f.input :email,
                  :placeholder => 'su correo electronico',
                  :required => true %>
      <%= f.input :password, 
                  :placeholder => 'su contraseña',
                  :hint => 'Entre 6 y 20 caracteres',
                  :required => true %>
      <%= f.input :password_confirmation,
                  :label => 'Confirmar',
                  :placeholder => 'repita su contraseña',
                  :required => true %>
      <%= f.input :rol,
                  :label => 'Soy un',
                  :collection => resource.rol_enum,
                  :as => :radio_buttons %>
      <%= f.association :institucion,
                        :hint => 'Opcional',
                        :input_html => { :class => chosen_simple,
                                   :data => { :placeholder => 'Elija un tipo' } } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Registrarme", :class => 'btn btn-primary' %>
    </div>
  <% end %>
  <%= render :partial => "devise/shared/links" %>
  </div>
</div>

