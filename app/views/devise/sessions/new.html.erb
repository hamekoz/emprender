<%
  add_crumb "Inicio", root_path
  add_crumb "Ingresar"
%>


<h1 class="page-header">Ingreso al sistema</h1>
<div class="row">
  <div class="span8 offset2">

  <%= simple_form_for(resource, :as => resource_name, 
                                :url => session_path(resource_name),
                                :html => { :class => 'form-horizontal' }) do |f| %>
    <div class="inputs well">
      <%= f.input :email,
                  :required => false,
                  :autofocus => true %>
      <%= f.input :password,
                  :required => false %>
      <%= f.input :remember_me,
                  :as => :boolean,
                  :label => "Recordarme" if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Ingresar", :class => 'btn btn-primary' %>
    </div>
  <% end %>
      <%= render :partial => "devise/shared/links" %>
  </div>
</div>
