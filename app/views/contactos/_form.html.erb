<%= form_for(@contacto) do |f| %>
  <% if @contacto.errors.any? %>
    <div class="alert-message block-message error">
      <h3><%= pluralize(@contacto.errors.count, "error") %> <%= t('errores.guardar.m')%> contacto:</h3>

      <ul>
      <% @contacto.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<fieldset>
  <legend>Datos de contacto</legend>
  <%= f.fields_for :persona do |persona| %>
    <%= render "personas/form", :f => persona %>
  <% end %>
</fieldset>
<fieldset>
  <legend>Telefonos</legend>
  <%= f.fields_for :telefono do |telefono| %>
    <%= render "telefonos/form", :f => telefono %>
  <% end %>
</fieldset>
<fieldset>
  <legend>Domicilio</legend>
  <%= f.fields_for :domicilio do |domicilio| %>
    <%= render "domicilios/form", :f => domicilio %>
  <% end %>
</fieldset>
<fieldset>
  <legend>Correo electronico</legend>
  <div class="clearfix">
    <%= f.label :mail %>
    <div class="input">
      <%= f.text_field :mail %>
    </div>
  </div>
</fieldset>
  <div class="actions">
    <%= f.submit :class => 'btn primary' %>
    <%= boton_cancelar contactos_path %>
  </div>
<% end %>
