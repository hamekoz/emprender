<%= form_for(@persona) do |f| %>
  <% if @persona.errors.any? %>
    <div id="error_explanation" class="alert-message error">
      <h2><%= pluralize(@persona.errors.count, "error") %> <%= t('errores.guardar.f')%> persona:</h2>

      <ul>
      <% @persona.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="inline">
  <div class="field">
    <%= f.label :nombre %><br />
    <%= f.text_field :nombre %>
  </div>
  <div class="field">
    <%= f.label :apellido %><br />
    <%= f.text_field :apellido %>
  </div>
  <div class="field">
    <%= f.label :sexo %><br />
    <%= f.check_box :sexo %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
</div>
<% end %>
