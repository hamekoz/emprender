<h1>Listando personas</h1>

<table>
  <tr>
    <th>Nombre</th>
    <th>Apellido</th>
    <th>Sexo</th>
    <th colspan="3" rowspan="1">
      <%= boton_agregar new_persona_path %>
    </th>
  </tr>

<% @personas.each do |persona| %>
  <tr>
    <td><%= persona.nombre %></td>
    <td><%= persona.apellido %></td>
    <td><%= persona.sexo %></td>
    <td><%= boton_mostrar persona %></td>
    <td><%= boton_editar edit_persona_path(persona) %></td>
    <td><%= boton_eliminar persona %></td>
  </tr>
<% end %>
</table>

<br />
