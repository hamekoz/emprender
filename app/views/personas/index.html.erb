<h1>Listando de personas</h1>

<table>
  <tr>
    <th>Nombres</th>
    <th>Apellidos</th>
    <th colspan="3" rowspan="1">
      <%= link_to 'Nueva Persona', new_persona_path, :class => 'agregar mediano boton verde' %>
    </th>
  </tr>

<% @personas.each do |persona| %>
  <tr>
    <td><%= persona.nombre %></td>
    <td><%= persona.apellido %></td>
    <td><%= link_to 'Mostrar', persona, :class => 'mostrar mediano boton naranja' %></td>
    <td><%= link_to 'Editar', edit_persona_path(persona), :class => 'editar mediano boton amarillo' %></td>
    <td><%= link_to 'Eliminar', persona, :confirm => 'Â¿Esta seguro?', :method => :delete, :class => 'eliminar mediano boton rojo' %></td>
    <br />
  </tr>
<% end %>
</table>

