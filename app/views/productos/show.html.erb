<%= show_for @producto do |producto| %>
<div class="row">
  <div class="span6">
    <ul class="thumbnails">
      <li class="span4">
        <%= link_to image_tag(@producto.imagen_1.url(:normal)), @producto.imagen_1.path, :class => "thumbnail" %>
      </li>
      <li class="span2">
        <%= link_to image_tag(@producto.imagen_2.url(:mini)), @producto.imagen_2.path, :class => "thumbnail" %>
      </li>
      <li class="span2">
        <%= link_to image_tag(@producto.imagen_3.url(:mini)), @producto.imagen_3.path, :class => "thumbnail" %>
      </li>
      <li class="span2">
        <%= link_to image_tag(@producto.imagen_4.url(:mini)), @producto.imagen_4.path, :class => "thumbnail" %>
      </li>
      <li class="span2">
        <%= link_to image_tag(@producto.imagen_5.url(:mini)), @producto.imagen_5.path, :class => "thumbnail" %>
      </li>
      <li class="span2">
        <%= link_to image_tag(@producto.imagen_6.url(:mini)), @producto.imagen_6.path, :class => "thumbnail" %>
      </li>
    </ul>
  </div>
  <div class="span6">
    <article>
      <h4><%= @producto.rubro.blank? ? "Sin rubro" : @producto.rubro.nombre %></h4>
      <h1><%= @producto.nombre %></h1>
      <%= producto.attribute :descripcion %>
      <%= producto.attribute :precio, 
                             :value => number_to_currency(@producto.precio, :locale => 'es-AR') %>
      <%= producto.association :emprendimiento do
        link_to @producto.emprendimiento.nombre, @producto.emprendimiento
      end %>
    </article>
  </div>
</div>
<% end %>

<div class="form-actions">
  <% if can? :manage, @producto %>
    <%= link_to(edit_admin_producto_path(@producto), :class => 'btn btn-warning') do %>
      <i class="icon-pencil"></i>
      <span>Editar</span>
    <% end %>
  <% elsif can? :edit, @producto %>
    <%= link_to(edit_mi_emprendimiento_producto_path(@producto), :class => 'btn btn-warning') do %>
      <i class="icon-pencil"></i>
      <span>Editar</span>
    <% end %>
  <% end %>

  <button type="button" class="btn" data-toggle="collapse" data-target="#comentarios">
    <i class="icon-comment"></i>
    <span id="contador_comentarios"><%= @producto.comentarios.aceptados.count %> Comentarios</span>
  </button>

  <%= link_to :back, :class => 'btn' do %>
    <i class="icon-arrow-left"></i>
    <span>Volver</span>
  <% end %>
  <span class="pull-right">
    <%= social_share_button_tag(@producto.nombre) %>
  </span>
</div>

<%= render 'comentarios/comentarios', :comentable => @producto %>
