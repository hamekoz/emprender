<%= show_for @producto do |producto| %>
<div class="row">
<div class="span6">
<ul class="thumbnails">
        <li class="span4">
          <%= link_to image_tag(@producto.imagen1.url(:normal)), @producto.imagen1.url, :class => "thumbnail" %>
        </li>
        <li class="span2">
          <%= link_to image_tag(@producto.imagen2.url(:mini)), @producto.imagen2.url, :class => "thumbnail" %>
        </li>
        <li class="span2">
          <%= link_to image_tag(@producto.imagen3.url(:mini)), @producto.imagen3.url, :class => "thumbnail" %>
        </li>
        <li class="span2">
          <%= link_to image_tag(@producto.imagen4.url(:mini)), @producto.imagen4.url, :class => "thumbnail" %>
        </li>
        <li class="span2">
          <%= link_to image_tag(@producto.imagen5.url(:mini)), @producto.imagen5.url, :class => "thumbnail" %>
        </li>
        <li class="span2">
          <%= link_to image_tag(@producto.imagen6.url(:mini)), @producto.imagen6.url, :class => "thumbnail" %>
        </li>
</ul>
</div>
<div class="span6">
  <article>
    <p>
     <h4><%= @producto.rubro.nombre %></font></h4>
       <h1><%= @producto.nombre %></h1>
    </p>
    <%= producto.attribute :descripcion %>
    <%= producto.attribute :precio %>
  </article>
<div class="form-actions">
  <% if can? :edit, @producto %>
    <%= link_to(edit_producto_path(@producto), :class => 'btn btn-warning') do %>
      <i class="icon-pencil"></i>
      <span>Editar</span>
    <% end %>
  <% end %>
  <%= link_to :back, :class => 'btn' do %>
    <i class="icon-arrow-left"></i>
    <span>Volver</span>
  <% end %>
</div>
  </div>

  
<% end %>

