<h1><%= "Inicio de sesión" %></h1>

<%= form_tag session_path do %>
  <div class="field">
    <%= label_tag :usuario, "Usuario" %><br />
    <%= text_field_tag :usuario %>
  </div>
  <div class="field">
    <%= label_tag :password, "Contraseña" %><br />
    <%= password_field_tag :password %>
  </div>
  <div class="actions">
    <%= submit_tag "Ingresar" %>
  </div>
<% end %>
