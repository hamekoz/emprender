<div id="comentarios" class="modal hide fade">
  <div class="modal-header">
    <h3>Comentarios</h3>
  </div>
  <div class="modal-body">
    <div id="nuevo_comentario"></div>
    <%= render comentable.comentarios %>
  </div>
  <div class="modal-footer">
    <%= link_to 'Nuevo comentario', new_comentario_path(:format => :js), :remote => true, :class => "btn btn-primary" %>
    <a href="#" class="btn" data-dismiss="modal">
      <i class="icon-remove"></i>
      <span>Cerrar</span>
    </a>
  </div>
</div>
