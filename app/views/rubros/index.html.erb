<h1>Listando rubros</h1>

<table>
  <tr>
    <th>Nombre</th>
    <th>Descripcion</th>
    <th><%= boton_agregar new_rubro_path %></th>
  </tr>

<% @rubros.each do |rubro| %>
  <tr>
    <td><%= rubro.nombre %></td>
    <td><%= rubro.descripcion %></td>
    <td class="acciones">
      <%= boton_mostrar rubro %>
      <%= boton_editar edit_rubro_path(rubro) %>
      <%= boton_eliminar rubro %>
    </td>
  </tr>
<% end %>
</table>
