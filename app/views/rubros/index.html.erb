<h1>Listado de rubros</h1>

<table>
  <tr>
    <th>Nombre</th>
    <th>Descripcion</th>
    <th colspan="3" rowspan="1">
      <%= boton_agregar new_rubro_path %>
    </th>
  </tr>

<% @rubros.each do |rubro| %>
  <tr>
    <td><%= rubro.nombre %></td>
    <td><%= rubro.descripcion %></td>
    <td><%= boton_mostrar rubro %></td>
    <td><%= boton_editar edit_rubro_path(rubro) %></td>
    <td><%= boton_eliminar rubro %></td>
  </tr>
<% end %>
</table>
