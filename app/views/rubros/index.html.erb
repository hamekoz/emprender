<h2 class= "breadcrumb">Rubros</h2>
<table id="3columnas" class="zebra-striped">
  <thead>
    <tr>
      <th class="blue">Nombre</th>
      <th class="blue">Descripcion</th>
      <th><%= boton_agregar new_rubro_path %></th>
    </tr>
  </thead>

  <tbody>
  <% @rubros.each do |rubro| %>
    <tr>
      <td><%= rubro.nombre %></td>
      <td><%= rubro.descripcion %></td>
      <td class="acciones">
        <%= boton_mostrar rubro %>
        <%= boton_editar edit_rubro_path(rubro) %>
        <%= boton_eliminar rubro %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
