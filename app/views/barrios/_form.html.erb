<%= form_for(@barrio) do |f| %>
  <% if @barrio.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@barrio.errors.count, "error") %> <%= t('errores.guardar.m')%> barrio:</h2>

      <ul>
      <% @barrio.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="clearfix">
    <%= f.label :nombre %><br />
    <div class="input">
      <%= f.text_field :nombre %>
    </div>
  </div>
  <div class="clearfix">
    <%= f.label :descripcion %><br />
    <div class="input">
      <%= f.text_field :descripcion %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit :class => 'btn primary' %>
    <%= boton_cancelar :back %>
  </div>
<% end %>
