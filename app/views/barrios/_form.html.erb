<%= simple_form_for @barrio do |f| %>

  <%= f.error_notification %>

  <fieldset>
    <legend>Barrio</legend>
    <%= f.input :nombre %>
    <%= f.input :descripcion %>
  </fieldset>

  <div class="actions">
    <%= f.button :submit, :class => 'btn primary' %>
    <%= boton_cancelar barrios_path %>
  </div>

<% end %>
