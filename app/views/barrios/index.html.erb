<h1>Listando barrios</h1>

<table>
  <tr>
    <th>Nombre</th>
    <th>Descripcion</th>
    <th colspan="3" rowspan="1">
      <%= boton_agregar new_barrio_path %>
    </th>
  </tr>

<% @barrios.each do |barrio| %>
  <tr>
    <td><%= barrio.nombre %></td>
    <td><%= barrio.descripcion %></td>
    <td><%= boton_mostrar barrio %></td>
    <td><%= boton_editar edit_barrio_path(barrio) %></td>
    <td><%= boton_eliminar barrio %></td>
  </tr>
<% end %>
</table>

<br />
